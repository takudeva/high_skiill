<div class="container">
  <h3 class="text-center">問題一覧</h3>
  <div class="row justify-content-center">
    <div class="panel-group col">
    <% ["小学６年生","中学１年生","中学２年生","中学３年生","高校１年生"].each_with_index do |level, index| %>
      <div class="panel panel-default">
        <h3 class="panel-heading text-center">
          <%= link_to level, "#collapse#{index + 1}", data: { toggle: "collapse" } %>
        </h3>
        <div id="collapse<%= index + 1 %>" class="panel-collapse collapse">
          <ul class="list-group">
          <% ["1-20","21-40","41-60"].each_with_index do |num, i| %>
            <li class="list-group-item">
              <span class="col-2"><%= num %></span>
              <%= link_to "読み", questions_path(level: index, type: 1, group: i + 1, page: 1), class: "btn btn-primary offset-1 col-2 mx-3" %>
              <%= link_to "意味", questions_path(level: index, type: 2, group: i + 1, page: 1), class: "btn btn-success col-2 mx-3" %>
            </li>
          <% end %>
          </ul>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>